<section class="slice slice-lg sct-color-1">
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">

                <div class="form-user style-1 rounded has-shadow-1">
                    <div class="form-header text-center">
                        <h2 class="form-header-title">ユーザー登録</h2>
                    </div>
                    <div class="form-body">
                      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                              <%= render "devise/shared/error_messages", resource: resource %>
                          <div class="form-group has-icon">
                              <span class="fa fa-user form-control-icon" aria-hidden="true"></span>
                              <label class="control-label sr-only" for="inputName">ニックネーム</label>
                              <%= f.text_field :name, autofocus: true, class:"form-control", id:"inputName", placeholder:"ニックネーム"%>
                          </div>
                          <div class="form-group has-icon">
                              <span class="fa fa-envelope form-control-icon" aria-hidden="true"></span>
                              <label class="control-label sr-only" for="inputEmail">メールアドレス</label>
                              <%= f.email_field :email, class:"form-control", id:"inputEmail", placeholder:"メールアドレス"%>
                          </div>
                          <div class="form-group has-icon">
                              <span class="fa fa-lock form-control-icon" aria-hidden="true"></span>
                              <label class="control-label sr-only" for="inputPassword">パスワード</label>
                              <%= f.password_field :password, autocomplete: "off", class:"form-control", id:"inputPassword", placeholder:"パスワード(6文字以上)" %>
                          </div>
                          <div class="form-group has-icon">
                              <span class="fa fa-check-circle form-control-icon" aria-hidden="true"></span>
                              <label class="control-label sr-only" for="inputConfirmPassword">パスワード確認</label>
                              <%= f.password_field :password_confirmation, autocomplete: "off", class:"form-control", id:"inputConfirmPassword", placeholder:"パスワード確認(6文字以上)" %>
                          </div>
                              <%= f.submit "新規登録", class:"btn btn-primary btn-lg btn-block btn-base-1 mt-20" %>
                          <% end %>

                      <br/><%= render "devise/shared/links" %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
