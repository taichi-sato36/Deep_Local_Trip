<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="text-center">
                <h2>ユーザー登録</h2>
            </div>
            <div class="form-body">
              <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                      <%= render "devise/shared/error_messages", resource: resource %>
                  <!-- ニックネーム -->
                  <div class="form-group">
                      <span class="fa fa-user" aria-hidden="true"></span>
                      <label class="sr-only" for="inputName">ニックネーム</label>
                      <%= f.text_field :name, autofocus: true, class:"form-control", id:"inputName", placeholder:"ニックネーム"%>
                  </div>
                  <!-- メールアドレス -->
                  <div class="form-group">
                      <span class="fa fa-envelope" aria-hidden="true"></span>
                      <label class="sr-only" for="inputEmail">メールアドレス</label>
                      <%= f.email_field :email, class:"form-control", id:"inputEmail", placeholder:"メールアドレス"%>
                  </div>
                  <!-- パスワード -->
                  <div class="form-group">
                      <span class="fa fa-lock" aria-hidden="true"></span>
                      <label class="sr-only" for="inputPassword">パスワード</label>
                      <%= f.password_field :password, autocomplete: "off", class:"form-control", id:"inputPassword", placeholder:"パスワード(6文字以上)" %>
                  </div>
                  <!-- パスワード確認用 -->
                  <div class="form-group">
                      <span class="fa fa-check-circle" aria-hidden="true"></span>
                      <label class="sr-only" for="inputConfirmPassword">パスワード確認</label>
                      <%= f.password_field :password_confirmation, autocomplete: "off", class:"form-control", id:"inputConfirmPassword", placeholder:"パスワード確認(6文字以上)" %>
                  </div>
                      <%= f.submit "新規登録", class:"btn btn-primary btn-lg btn-block" %>
                  <% end %>
                    <br/><%= render "devise/shared/links" %>
             </div>
        </div>
    </div>
</div>
<!-- フッター -->
<footer class="footer">
    <div class="container">
      <h5 class="text-right text-muted">
            <a href="https://twitter.com/st36deco" target="_blank">
              <i class="fab fa-twitter-square"></i>
            </a>:作成者:さとう。
        </h5>
    </div>
</footer>
