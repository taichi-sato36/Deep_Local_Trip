<!DOCTYPE html>
<html>
  <head>
    <title>DeepLocalTrip</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

    <body style= "{ padding-top: 70px; }">
      <header class="navbar navbar-inverse">
        <div class="container">
          <nav class="nav navbar-nav navbar-left">
            <span class="strong text-muted h3">LOGO</span>
          </nav>
          <nav>
            <ul class="nav navbar-nav navbar-right">
              <% if user_signed_in? %>
                <li><%= link_to 'Home', user_path(current_user.id), class: "glyphicon glyphicon-home home" %></li>
                <li><%= link_to 'マイページ', user_mypage_path(current_user.id), class: "glyphicon glyphicon-user users" %></li>
                <li><%= link_to "logout", destroy_user_session_path, method: :delete, class: "glyphicon glyphicon-log-out" %></li>
              <% else %>
                <li><%= link_to 'Home', root_path, class: "glyphicon glyphicon-home home" %></li>
                <li><%= link_to "About", about_homes_path, class: "glyphicon glyphicon-link about" %></li>
                <li><%= link_to "sign_up", new_user_registration_path,class: "glyphicon glyphicon-edit sign_up" %></li>
                <li><%= link_to "login", new_user_session_path,class: "glyphicon glyphicon-log-in sign_in" %></li>
              <% end %>
            </ul>
          </nav>
        </div>

      </header>
    <%= yield %>
  </body>
</html>
