<!DOCTYPE html>
<html>
  <head>
    <title>DeepLocalTrip</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

    <body>
        


      <header class="navbar navbar-expand-sm navbar-fixed-top" style="background-color:#F29A7E;">
        <div class="container">
          <nav class="nav navbar-nav navbar-left">
            <%= link_to (root_path) do %>
              <%= image_tag 'logo.png',:size =>'120x70' %>
            <% end %>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbar" aria-controls="navbar" aria-expanded="false" aria-label="ナビゲーションの切替" style="background-color:#F29A7E;">
            <span class="navbar-toggler-icon">≡</span>
          </button>
          </nav>
          <nav class="collapse navbar-collapse" id="navbar">
            <ul class=" nav navbar-nav navbar-right">
              <% if user_signed_in? %>
                <li class="nav-item"><%= link_to 'ホーム', home_path, class: "glyphicon glyphicon-home" %></li>
                <li class="nav-item"><%= link_to "アバウト", about_homes_path, class: "glyphicon glyphicon-link" %></li>
                <li class="nav-item"><%= link_to '新規投稿', new_post_path, class: "glyphicon glyphicon-picture" %></li>
                <li class="nav-item"><%= link_to '都道府県一覧', prefectures_posts_path, class: "glyphicon glyphicon-globe" %></li>
                <li class="nav-item"><%= link_to 'マイページ', user_mypage_path(current_user.id), class: "glyphicon glyphicon-user" %></li>
                <li class="nav-item"><%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "glyphicon glyphicon-log-out" %></li>
              <% else %>
                <li class="nav-item"><%= link_to 'ホーム', root_path, class: "glyphicon glyphicon-home" %></li>
                <li class="nav-item"><%= link_to "アバウト", about_homes_path, class: "glyphicon glyphicon-link" %></li>
                <li class="nav-item"><%= link_to '都道府県一覧', prefectures_posts_path, class: "glyphicon glyphicon-globe" %></li>
                <li class="nav-item"><%= link_to "新規登録", new_user_registration_path,class: "glyphicon glyphicon-edit sign_up" %></li>
                <li class="nav-item"><%= link_to "ログイン", new_user_session_path,class: "glyphicon glyphicon-log-in sign_in" %></li>
              <% end %>
            </ul>
          </nav>
        </div>

      </header>
    <%= yield %>
  </body>
</html>
