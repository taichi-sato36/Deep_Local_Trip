<div class="row">
	<div class="col-md-12">
		<h2>お気に入り一覧</h2>
		<table class="table table-hover table-inverse">
					<thead>
						<tr>
							<th></th>
							<th>Title</th>
							<th>Opinion</th>
							<th colspan="3"></th>
						</tr>
					</thead>
					<% @like_posts.each do |post| %>
					<tbody>
						<tr>
							<td><%= attachment_image_tag post, :post_image, :fill,300,300, format: 'jpeg', fallback: "show_image.png" %></td>
							<td><%= link_to post.title, post_path(post.id) %></td>
							<td><%= current_user.name %></td>
							<td></td>
						</tr>
					</tbody>
					<% end %>
				</table>
	</div>
	
</div>
