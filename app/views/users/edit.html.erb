<div class="row">
	<div class="col-md-12">
		<% if @user.errors.any? %>
				<div class="col-xs-12" id="error_explanation">
					<h2>
						<%= @user.errors.count %> errors prohibited this obj from being saved:</h2>
					<ul>
						<% @user.errors.full_messages.each do |m| %>
						<li><%= m %></li>
						<% end %>
					</ul>
				</div>
			<% end %>
			<%= form_for(@user) do |f| %>
				<div class="field">
					<label for="user_name">ニックネーム</label>
					<%= f.text_field :name %>
				</div>
				<div class="field">
	    			<label for="user_profile">プロフィール</label>
	    			<%= f.text_area :profile %>
	    		</div>
				<div class="field">
					<label for="user_image">プロフィール画像</label>
					<label class="control-label sr-only" for="inputEmail">ProfileImage</label>
	    			<%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form" %>
	    		</div>
	    		<div class="actions">
	    			<%= f.submit "変更する" %>
	    		</div>
	    	<% end %>
	</div>
	
</div>